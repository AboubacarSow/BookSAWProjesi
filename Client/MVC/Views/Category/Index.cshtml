@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container mx-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="entete">
            <h4 class="title"><i class="fa-solid fa-list me-2"></i>Kategoriler</h4>
            <a asp-controller="Category" asp-action="AddCategory" class="btn btn-outline-primary">
                <i class="fa-solid fa-plus"></i>
                Yeni Kategori Ekle
            </a>
        </div>
    </div>
    <div class="margin-auto mb-3 table-responsive tableau">
        <table class="table table-hover table-striped table-sm ">
            <thead class="table-header rounded-3">
                <tr>
                    <th>N°</th>
                    <th>Ad</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @{
                    count = 0;
                }
                @foreach (var category in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@category.CategoryName</td>
                        <td>
                            <div>
                                <a class="btn btn-danger" asp-controller="Category" 
                                asp-action="DeleteCategory" asp-route-id="@category.CategoryId">
                                    <i class="fa fa-trash me-1"></i> Sil
                                </a>
                                <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@category.CategoryId"
                                   class="btn btn-success">
                                    <i class="fa fa-edit me-1"></i>
                                    Güncelle
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

