@page "/admin/books"
@inject IServiceManager _manager

<PageTitle>Kitaplar</PageTitle>  

@if(books ==null){
    <p><em> Loading...</em>  </p>
}
else{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <p> <em> Kitaplar <i class="fas fa-book ms-1"> </i> </em></p>
        <a href="" class="btn btn-outline-primary">
            <i class="fas fa-plus"></i>
            Ekle
        </a>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>N°</th>
                <th>Ad</th>
                <th>Fıyat</th>
                <th>Stok</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var book in books)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@book.Name</td>
                    <td>@book.Price</td>
                    <td>@book.Stock</td>
                    <td>
                        <div class="btn-group">
                            <a href="" class="btn btn-danger">Sil</a> 
                            <a href="" class="btn btn-success">Güncelle</a> 
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code{
    private int count=0;
    private List<ResultBookDto>? books;
    protected override async Task  OnInitializedAsync()
    {
        books = await _manager.BookService.GetAllBooksAsync();
    }
}